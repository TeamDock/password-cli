{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/@types"],
  "exclude": ["node_modules", "dist"]
}
